        "                print(\"ğŸ”º Too high! Try again.\")\n",
        "            else:\n",
        "                print(f\"âœ… Correct! You guessed it in {attempts} attempts.\")\n",
        "                break\n",
        "        except ValueError:\n",
        "            print(\"âš ï¸ Invalid input. Please enter a number.\")\n",
